apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: webapprs
  namespace: qa
  labels: 
    app: mywebapp
spec: 
  #replicas: 2
  matchLabels:
  selector:
    app: mywebapp
  template:
    metadata:
      name: tesla
      labels:
        app: mywebapp
    spec:
      containers:
      - name: mavenwebapp
        image: mylandmarktech/java-web-app
        ports:
        - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata: 
  name: webappsvc
  namespace: qa
spec: 
  selector: 
  app: mywebapp
  #type: NodePort
  ports:
    targetPort: 8080
    port: 80
